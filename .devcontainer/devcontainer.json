{
    "name": "Nba-Ingame-Prob",
	"dockerComposeFile": "docker-compose.yml",
	"service": "nba-ingame-prob",
	"workspaceFolder": "/workspaces/nba-ingame-prob",
	"privileged": true,
	"postCreateCommand": "if [ -d \".venv\" ]; then rm -rf .venv;fi && uv sync && uv run pre-commit install",
	"customizations": {
		"vscode": {
			"settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
				"python.defaultInterpreterPath": "/workspaces/nba-ingame-prob/.venv/bin/python"
			},
            "profiles": {
                "bash": {
                    "path": "/bin/bash"
                }
            },
			"extensions": [
				"ms-azuretools.vscode-docker",
                "ms-python.python",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-powertoys",
				"eamodio.gitlens",
				"charliermarsh.ruff",
				"mechatroner.rainbow-csv",
				"ms-python.debugpy",
				"openai.chatgpt"
			]
		}
	}
}